<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="left|center"
            android:layout_marginLeft="15dp">


            <TextView
                android:text="2                  3                1        ---Row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"/>
            <TextView
                android:text="2                  3                1        ---Row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"/>
            <TextView
                android:text="|"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"/>
            <TextView
                android:text="|"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"/>
            <TextView
                android:text="|"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"/>
            <TextView
                android:text="colums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:textColor="#ff0000"/>

        </LinearLayout>

        <TextView
            android:text="select Row and columns in matrix one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#426"
            android:textSize="15sp"
            android:fontFamily="serif"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="2">
            <Spinner
                android:id="@+id/sub_spinner_rows1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </Spinner>
            <Spinner
                android:id="@+id/sub_spinner_columns1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </Spinner>
        </LinearLayout>
        <Button
            android:id="@+id/sub_first_button"
            android:text="Enter values"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:textColor="#f8ffffff"
            android:background="@drawable/btn_shpe"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="select Row and columns in matrix second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#426"
            android:textSize="15sp"
            android:fontFamily="serif"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="2">
            <Spinner
                android:id="@+id/sub_spinner_rows2"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </Spinner>
            <Spinner
                android:id="@+id/sub_spinner_columns2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </Spinner>
        </LinearLayout>
        <Button
            android:id="@+id/sub_second_button"
            android:text="Enter values"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:textColor="#f8ffffff"
            android:background="@drawable/btn_shpe"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>