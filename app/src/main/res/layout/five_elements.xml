<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
            android:id="@+id/five_et1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="one"
            android:inputType="numberDecimal"

            android:layout_margin="2dp"
            android:ems="3"/>
        <EditText
            android:id="@+id/five_et2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:hint="two"
            android:ems="3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <EditText
            android:id="@+id/five_et3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="three"
            android:layout_margin="2dp"
            android:inputType="numberDecimal"
            android:ems="3"/>
        <EditText
            android:id="@+id/five_et4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:hint="four"
            android:ems="3"/>
    </LinearLayout>
</LinearLayout>