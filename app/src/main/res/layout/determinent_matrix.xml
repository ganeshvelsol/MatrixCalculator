<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Determinenet Matrix Example"
        android:background="#ffc0cb"
        android:textColor="#ff4500"
        android:textSize="15sp"
        android:fontFamily="serif"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
    <TextView
        android:text="select Row and columns in matrix one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#426"
        android:textSize="15sp"
        android:fontFamily="serif"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="2">
        <Spinner
            android:id="@+id/spinner_rows1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_shape"
            android:layout_marginLeft="3dp"
            android:popupBackground="#dfffffff"
            android:layout_weight="0.8">
        </Spinner>
        <Spinner
            android:id="@+id/spinner_columns1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_shape"
            android:layout_marginLeft="8dp"
            android:popupBackground="#dfffffff"
            android:layout_weight="0.8">
        </Spinner>
    </LinearLayout>
    <Button
        android:id="@+id/first_button"
        android:text="Enter values"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shpe"
        android:layout_margin="10dp"
        android:textColor="#fbfcfc"
        android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <TextView
        android:text="the resultant matrix wll be"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3">
        <TextView
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ff4500"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ff4500"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ff4500"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3">
        <TextView
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ff4500"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ff4500"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:weightSum="3">
        <TextView
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ff4500"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/eigt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ff4500"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#ff4500"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>