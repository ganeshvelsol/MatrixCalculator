<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="left|center"
        android:layout_marginLeft="15dp">


        <TextView
            android:text="2                  3                1        ---Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>
        <TextView
            android:text="2                  3                1        ---Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>
        <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>
        <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>
        <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>
        <TextView
            android:text="colums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:layout_gravity="left|center"/>

    </LinearLayout>

    <TextView
        android:text="select Row and columns in matrix one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#426"
        android:textSize="15sp"
        android:fontFamily="serif"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="2">
        <Spinner
            android:id="@+id/spinner_rows1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_shape"
            android:popupBackground="#dfffffff"
            android:layout_marginLeft="3dp"
            android:layout_weight="0.8">
        </Spinner>
        <Spinner
            android:id="@+id/spinner_columns1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_shape"
            android:layout_marginLeft="8dp"
            android:popupBackground="#dfffffff"
            android:layout_weight="0.8">
        </Spinner>
    </LinearLayout>
    <Button
        android:id="@+id/first_button"
        android:text="Enter values"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="@drawable/btn_shpe"/>

    <TextView
        android:text="select Row and columns in matrix second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#426"
        android:textSize="15sp"
        android:fontFamily="serif"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="2">
        <Spinner
            android:id="@+id/spinner_rows2"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_shape"
            android:layout_marginLeft="3dp"
            android:popupBackground="#dfffffff"
            android:layout_weight="0.8">
        </Spinner>
        <Spinner
            android:id="@+id/spinner_columns2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_shape"
            android:layout_marginLeft="8dp"
            android:popupBackground="#dfffffff"
            android:layout_weight="0.8">
        </Spinner>
    </LinearLayout>
    <Button
        android:id="@+id/second_button"
        android:text="Enter values"
        android:layout_marginLeft="10dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shpe"/>
</LinearLayout>
</RelativeLayout>